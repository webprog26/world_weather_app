<?xml version="1.0" encoding="utf-8"?>
<com.webprog26.worldweatherapp.ui.weather_views.DailyForecastView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:gravity="center_vertical">

    <TextView
        android:id="@+id/tv_daily_forecast_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/daily_forecast_icon"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tv_daily_forecast_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textColor="@color/black"
        android:textSize="14sp" />

</com.webprog26.worldweatherapp.ui.weather_views.DailyForecastView>